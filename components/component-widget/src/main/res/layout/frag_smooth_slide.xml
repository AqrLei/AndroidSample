<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <com.aqrlei.widget.SmoothSlideLayout
        android:layout_width="50dp"
        android:layout_height="200dp"
        android:background="@android:color/holo_green_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.85"
        app:scroll_direction="bottom"
        app:scroll_keep_size="50dp">

        <TextView
            android:id="@+id/tvScrollBottomTest"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Hello World!"
            android:textColor="#FF00FF00"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </com.aqrlei.widget.SmoothSlideLayout>

    <com.aqrlei.widget.SmoothSlideLayout
        android:layout_width="50dp"
        android:layout_height="200dp"
        android:background="@android:color/holo_green_light"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:scroll_direction="top"
        app:scroll_keep_size="50dp">

        <TextView
            android:id="@+id/tvScrollTopTest"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Hello World!"
            android:textColor="#FF00FF00"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </com.aqrlei.widget.SmoothSlideLayout>

    <com.aqrlei.widget.SmoothSlideLayout
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@android:color/holo_green_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:scroll_alpha_change_enable="true"
        app:scroll_direction="left"
        app:scroll_keep_size="50dp">

        <TextView
            android:id="@+id/tvScrollTest"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Hello World!"
            android:textColor="#FF00FF00"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </com.aqrlei.widget.SmoothSlideLayout>

    <com.aqrlei.widget.SmoothSlideLayout
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@android:color/holo_green_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4"
        app:scroll_alpha_change_enable="true"
        app:scroll_alpha_to_expand="0.5"
        app:scroll_direction="right"
        app:scroll_keep_size="50dp">

        <TextView
            android:id="@+id/tvScrollRightTest"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Hello World!"
            android:textColor="#FF00FF00"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </com.aqrlei.widget.SmoothSlideLayout>

</androidx.constraintlayout.widget.ConstraintLayout>